<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/dark_gray" />
            <corners android:radius="@dimen/article_background_radius"/>
        </shape>
    </item>
    <item android:right="@dimen/article_background_right" android:left="@dimen/article_background_left" android:bottom="@dimen/article_background_bottom">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/article_background_radius"/>
        </shape>
    </item>
</layer-list>